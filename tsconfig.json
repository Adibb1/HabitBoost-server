{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node"], // Ensure @types/node is installed
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "public/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
